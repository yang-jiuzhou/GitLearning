        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HBBio.SystemControl"
        mc:Ignorable="d"
        Title="ScreenLockWin" WindowState="Maximized" Background="#EEF5FD" Opacity="0.5" AllowsTransparency="True" WindowStyle="None">
    <Grid>
        <Label x:Name="labLockScreen" Style="{x:Null}" MouseDown="labLockScreen_MouseDown"/>
    </Grid>
</Window>
